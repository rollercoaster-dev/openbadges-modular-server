#!/bin/sh

echo "ğŸ” Running pre-push checks..."

# Run linting on all TypeScript files
echo "ğŸ“ Linting all TypeScript files..."
bun run lint
LINT_EXIT_CODE=$?

# Run type checking on the entire project
echo "ğŸ” Type checking entire project..."
bun run typecheck
TYPE_EXIT_CODE=$?

# Run tests
echo "ğŸ§ª Running tests..."
bun test
TEST_EXIT_CODE=$?

# Check if any of the commands failed
if [ $LINT_EXIT_CODE -ne 0 ] || [ $TYPE_EXIT_CODE -ne 0 ] || [ $TEST_EXIT_CODE -ne 0 ]; then
  echo "âŒ Pre-push checks failed. Please fix the issues before pushing."
  exit 1
fi

echo "âœ… All pre-push checks passed!"
