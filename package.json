{
  "name": "open-badges-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:core": "bun test --pattern \"!tests/infrastructure/database/**\"",
    "test:sqlite": "bun test tests/infrastructure/database/modules/sqlite",
    "test:pg": "bun test tests/infrastructure/database/modules/postgresql",
    "test:pg:coverage": "bun test --coverage tests/infrastructure/database/modules/postgresql",
    "test:pg:setup": "docker-compose -f docker-compose.test.yml up -d",
    "test:pg:teardown": "docker-compose -f docker-compose.test.yml down",
    "test:pg:with-docker": "npm run test:pg:setup && npm run test:pg && npm run test:pg:teardown",
    "db:generate": "drizzle-kit generate",
    "db:generate:pg": "DB_TYPE=postgresql drizzle-kit generate",
    "db:generate:sqlite": "DB_TYPE=sqlite drizzle-kit generate",
    "db:migrate": "bun run src/infrastructure/database/migrations/run.ts",
    "db:migrate:pg": "DB_TYPE=postgresql bun run src/infrastructure/database/migrations/run.ts",
    "db:migrate:sqlite": "DB_TYPE=sqlite bun run src/infrastructure/database/migrations/run.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:pg": "DB_TYPE=postgresql drizzle-kit studio",
    "db:studio:sqlite": "DB_TYPE=sqlite drizzle-kit studio",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "prepare": "husky",
    "db:test:pg:start": "docker compose -f docker-compose.test.yml up -d --wait",
    "db:test:pg:stop": "docker compose -f docker-compose.test.yml down --volumes",
    "db:test:pg:migrate": "NODE_ENV=test DB_TYPE=postgresql bun run db:generate:pg && NODE_ENV=test DB_TYPE=postgresql bun run db:migrate:pg",
    "test:e2e:pg:setup": "bun run db:test:pg:start && bun run db:test:pg:migrate",
    "test:e2e:pg:run": "NODE_ENV=test DB_TYPE=postgresql bun test ./test/e2e",
    "test:e2e:pg": "bun run test:e2e:pg:setup && bun run test:e2e:pg:run ; bun run db:test:pg:stop",
    "db:test:sqlite:migrate": "NODE_ENV=test DB_TYPE=sqlite SQLITE_DB_PATH=$(pwd)/test/e2e/test_database.sqlite bun run db:generate:sqlite && NODE_ENV=test DB_TYPE=sqlite SQLITE_DB_PATH=$(pwd)/test/e2e/test_database.sqlite bun run db:migrate:sqlite",
    "test:e2e:sqlite:run": "NODE_ENV=test DB_TYPE=sqlite SQLITE_DB_PATH=$(pwd)/test/e2e/test_database.sqlite bun test ./test/e2e",
    "test:e2e:sqlite": "NODE_ENV=test DB_TYPE=sqlite bun test ./test/e2e",
    "test:e2e": "bun run test:e2e:sqlite && bun run test:e2e:pg"
  },
  "lint-staged": {
    "*.ts": [
      "bun ./scripts/lint-staged.js"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.13",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "tsc-files": "^1.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@rollercoaster-dev/rd-logger": "^0.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.9.1",
    "chalk": "^5.4.1",
    "drizzle-orm": "^0.41.0",
    "elysia": "^1.2.25",
    "elysia-helmet": "^2.0.0",
    "elysia-rate-limit": "^4.3.0",
    "jose": "^6.0.10",
    "lru.min": "^1.1.2",
    "openapi3-ts": "^4.4.0",
    "openbadges-types": "^3.2.3",
    "postgres": "^3.4.5",
    "supertest": "^7.1.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  }
}
