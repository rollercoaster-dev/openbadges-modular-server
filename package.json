{
  "name": "open-badges-api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "db:migrate": "drizzle-kit migrate",
    "build": "bun build src/index.ts --target bun --outdir dist",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.13",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "tsc-files": "^1.1.4"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.0",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.9.1",
    "drizzle-orm": "^0.41.0",
    "elysia": "^1.2.25",
    "elysia-helmet": "^2.0.0",
    "elysia-rate-limit": "^4.3.0",
    "openapi3-ts": "^4.4.0",
    "openbadges-types": "^3.2.0",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0"
  }
}
